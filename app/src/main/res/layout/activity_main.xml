<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/narrow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/sign_up_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/join"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:src="@drawable/sign_up_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/narrow"/>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_up_image"
        app:layout_constraintTop_toBottomOf="@id/narrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_finish_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/narrow"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picture"
        android:layout_marginTop="60dp"
        android:background="#EDEDED"
        android:hint="이드림"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#42448B"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#42448B"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/picture"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="310dp"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="120dp"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:hint="dreamy58"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/id"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/id"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="아이디"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#42448B"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="120dp"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:hint="**********"/>


    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:text="비밀번호"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#42448B"/>

    <EditText
        android:id="@+id/checkpassword"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="120dp"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:hint="**********"/>



    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/checkpassword"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/checkpassword"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:text="비밀번호 확인"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#42448B"/>

    <EditText
        android:id="@+id/birth"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/checkpassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="120dp"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:hint="1958/05/11"/>


    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/birth"
        app:layout_constraintTop_toBottomOf="@id/checkpassword"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/birth"
        app:layout_constraintTop_toBottomOf="@id/checkpassword"
        android:text="생년월일"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#42448B"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/birth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="120dp"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:hint="서울시 강남구"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dots"
        app:layout_constraintLeft_toRightOf="@id/address"
        app:layout_constraintTop_toBottomOf="@id/birth"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/address"
        app:layout_constraintTop_toBottomOf="@id/birth"
        android:text="사는 곳"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#42448B"/>

    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 관심사"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#42448B"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/interest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="#그림"
        android:textColor="#42448B"
        android:background="#969EFF"
        app:layout_constraintTop_toBottomOf="@id/interest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="#스포츠"
        android:textColor="#42448B"
        android:background="#969EFF"
        app:layout_constraintTop_toBottomOf="@id/interest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>